{
  "name": "microservices-nestjs",
  "version": "1.0.0",
  "description": "Microservices architecture with NestJS, GraphQL, gRPC, and Kafka",
  "private": true,
  "workspaces": [
    "services/*",
    "libs/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "start": "lerna run start --parallel",
    "start:dev": "lerna run start:dev --parallel",
    "start:debug": "lerna run start:debug --parallel",
    "start:prod": "lerna run start:prod --parallel",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch",
    "test:cov": "lerna run test:cov",
    "test:e2e": "lerna run test:e2e",
    "lint": "lerna run lint",
    "format": "lerna run format",
    "dev:start": "sh scripts/dev-start.sh",
    "dev:stop": "sh scripts/dev-stop.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "lerna": "^8.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
